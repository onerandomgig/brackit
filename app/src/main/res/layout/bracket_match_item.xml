<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="#0FF">

    <TextView
        android:id="@+id/team_1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Team 1"/>

    <TextView
        android:id="@+id/team_1_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="5"/>

    <TextView
        android:id="@+id/team_2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/team_1_name"
        android:text="Team 2"/>
    <TextView
        android:id="@+id/team_2_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/team_1_score"
        android:layout_alignParentEnd="true"
        android:text="10"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#FFF"
        android:layout_below="@id/team_2_name"/>


</RelativeLayout>